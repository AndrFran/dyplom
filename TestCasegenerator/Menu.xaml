<UserControl x:Class="WpfApplication2.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication2"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="22">
                <MenuItem Header="File" Click="File">
                </MenuItem>
                <MenuItem Header="TestCases" Click="TestCases">
                </MenuItem>
                <MenuItem Header="Settings">
                    <MenuItem Header="General Settings"  Click="Settings">
                    </MenuItem>
                    <MenuItem Header="Format Customization" Click="EditTemplate">
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
